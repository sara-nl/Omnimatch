CC = /raid5/apps/MPI/LAM-6.5.6/bin/mpicc
CFLAGS = -O4 -I. -I/raid5/apps/MPI/LAM-6.5.6/include -I../include/ -I/raid5/apps/fftw-2.1.3/include

LD = /raid5/apps/MPI/LAM-6.5.6/bin/mpicc
LDFLAGS = -O4 -L. -L/raid5/apps/MPI/LAM-6.5.6/lib -L/raid5/apps/fftw-2.1.3/lib  -L../lib/
LIBS = -lrfftw -lfftw -lm -ltom 

OBJECTS = ./hippos.o  

PROGRAM = ../bin/hippos.exe

$(PROGRAM): $(OBJECTS)
	$(LD) $(LDFLAGS) -o $(PROGRAM) $(OBJECTS) $(LIBS)
	


clean:
	rm -f ./src/*.o  
	rm -f ./lib/*.o  
	rm -f ./lib/libtom.a     

libs:
	cd ./lib/ && $(MAKE)
